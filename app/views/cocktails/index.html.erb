<h1 class="text-center">Cocktails list:</h1>
<p class="btn btn-info btn-lg btn-block"><%= link_to "Create a cocktail", new_cocktail_path %></p>
<div class="row">
<% @cocktails.each do |cocktail| %>
  <div class="col-4 card">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= cocktail.name %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <i class="btn btn-primary"><%= link_to "Find out more!", cocktail_path(cocktail) %></i>
    </div>
  </div>
</div>
<% end %>
