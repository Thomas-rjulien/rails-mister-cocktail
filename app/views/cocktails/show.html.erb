<h1 class="text-center mb-3">Cocktail name: <%= @cocktail.name %></h1>
<%= cl_image_tag(@cocktail.photo, width: 600, height: 500, crop: :fill) %>
<h2>Recipe:</h2>
<% @cocktail.doses.each do |new_dose| %>
<ul>
  <li>
    <p><%= new_dose.description %>: <%= new_dose.ingredient.name %></p>
    <span><%= link_to "Delete", cocktail_dose_path(@cocktail, new_dose),method: :delete %></span>
  </li>
</ul>
<% end %>
<h2>Create dose:</h2>
<%= render 'doses/new', cocktail: @cocktail, dose: @dose %>
<i class="btn-gradient"><%= link_to "Back to Cocktail list", cocktails_path %></i>
